{
  "name": "lichess-ff",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "web-ext build --overwrite-dest",
    "start": "web-ext run",
    "web-ext-lint": "web-ext lint",
    "lint": "eslint",
    "lint-fix": "eslint --fix  ",
    "lint-watch": "esw -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "clear": "jest --clearCache "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allaf/lichess-ff.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allaf/lichess-ff/issues"
  },
  "homepage": "https://github.com/allaf/lichess-ff#readme",
  "devDependencies": {
    "eslint": "^7.2.0",
    "jest": "^26.0.1",
    "eslint-watch": "^7.0.0"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "src/**/*.js"
        ],
        "excludedFiles": "*.test.js",
        "rules": {
          "prefer-const":2,
          "no-undef": 2,
          "no-shadow-restricted-names": 2,
          "no-unused-vars": 2,
          "no-redeclare": 2,
          "quotes": [
            "error",
            "single"
          ]
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "node": true
    }
  }
}
